{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended"
	],
	// jsRules is same format as rules that will apply to js and jsx, or a
	// boolean true to copy all js compatible rules from the rules section.
	"jsRules": true,
	"linterOptions": {
		"exclude": [
			"node_modules/**"
		]
	},
	"rules": {
		"object-literal-key-quotes": [
			true,
			"as-needed"
		],
		"forin": false,
		"curly": [
			true,
			"ignore-same-line"
		],
		//"no-non-null-assertion": false,
		"comment-format": false,
		"no-console": false,
		"object-literal-shorthand": false,
		"only-arrow-functions": false,
		"arrow-parens": [
			true,
			"ban-single-arg-parens"
		],
		"quotemark": {
			"severity": "default",
			"options": [
				"single",
				"avoid-escape",
				"avoid-template"
			]
		},
		"indent": {
			"severity": "default",
			"options": [
				"tabs"
			]
		},
		"whitespace": [
			false,
			"check-branch",
			"check-decl",
			"check-operator",
			"check-module",
			"check-separator",
			"check-rest-spread",
			"check-type",
			"check-typecast",
			"check-type-operator",
			"check-preblock",
			"check-postbrace"
		],
		"no-empty": {
			"severity": "default",
			"options": [
				"allow-empty-catch",
				"allow-empty-functions"
			]
		},
		"no-eval": false,
		"no-trailing-whitespace": false,

		"interface-name": false,
		"jsdoc-format": false,
		"ordered-imports": false,
		"object-literal-sort-keys": false,
		"no-consecutive-blank-lines": false,
		"no-shadowed-variable": false, //when we have time this should be enabled and shadowed vars should be renamed.
		"prefer-for-of": false,
		"semicolon": {
			"severity": "default",
			"options": "never"
		},
		"space-before-function-paren": false,
		"space-within-parens": false,
		"no-irregular-whitespace": false,
		"no-string-literal": false,
		"prefer-const": true,
		"max-line-length": false,
		"trailing-comma": [
			true,
			{
				"multiline": {
					"objects": "ignore",
					"arrays": "ignore",
					"functions": "never",
					"typeLiterals": "ignore"
				},
				"esSpecCompliant": true
			}
		],
		"typedef": false,
		"variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case"]
	}
}
